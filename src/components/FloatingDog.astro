<style>
    /* --- CONFIGURACIÓN DE FLOTACIÓN Y SALTO DE ENTRADA --- */
    .dog-wrapper {
        position: fixed;
        bottom: 0px;           
        right: 50px;          /* Mantenemos el ajuste para que no se corte */
        z-index: 9999;
        
        /* Estado base (tamaño normal) */
        transform: scale(0.35);
        transform-origin: bottom right;
        pointer-events: none;
        filter: drop-shadow(0 0 10px rgba(0,0,0,0.2));
        transition: transform 0.3s ease;

        /* AQUÍ ESTÁ LA MAGIA: Animación de entrada (El Salto) */
        animation: jumpIn 1.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        
        /* Variables de color */
        --fur-black: #262626; 
        --fur-tan: #cfa37e;   
        --fur-tan-light: #e6cea8; 
        --ear-pink: #dcae9f;  
        --eye-brown: #6e4a35;
        --collar-brown: #7a3e26;
    }

    /* --- KEYFRAMES DEL SALTO DE ENTRADA --- */
    @keyframes jumpIn {
        0% { 
            transform: scale(0.35) translateY(400px); /* Empieza escondido abajo */
            opacity: 0; 
        }
        50% { 
            transform: scale(0.35) translateY(-120px); /* ¡Salta muy alto! */
            opacity: 1; 
        }
        70% { 
            transform: scale(0.35) translateY(20px); /* Cae y rebota un poco */
        }
        100% { 
            transform: scale(0.35) translateY(0); /* Aterriza en su lugar */
        }
    }

    /* Efecto Hover */
    .dog-wrapper:hover {
        transform: scale(0.4) translateY(-10px);
    }
    .dog-wrapper:hover .dog-container,
    .dog-wrapper:hover .paw,
    .dog-wrapper:hover .head,
    .dog-wrapper:hover .ear {
        animation-play-state: paused;
    }

    .cartoon-canvas {
        position: relative;
        width: 400px;
        height: 500px;
        background: transparent;
        overflow: visible;
    }

    /* --- ANIMACIONES DE CAMINATA (Iguales que antes) --- */
    @keyframes walkBob {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-15px); }
    }
    @keyframes pawWalk {
        0%, 100% { transform: translateX(0) translateY(0); }
        25% { transform: translateX(-15px) translateY(-5px); } 
        50% { transform: translateX(0) translateY(0); }
        75% { transform: translateX(15px) translateY(-5px); } 
    }
    @keyframes headBob {
        0%, 100% { transform: rotate(0deg); }
        25% { transform: rotate(2deg); }
        75% { transform: rotate(-2deg); }
    }
    @keyframes earFlop {
        0%, 100% { transform: rotate(0deg); }
        50% { transform: rotate(5deg); }
    }
    
    /* --- APLICACIÓN DE ANIMACIONES --- */
    .dog-container {
        position: absolute; top: 50px; left: 50%;
        width: 300px; height: 400px; z-index: 20;
        animation: walkBob 0.6s infinite ease-in-out; /* Sigue caminando mientras salta */
    }
    .paw.walking { animation: pawWalk 0.6s infinite linear; }
    .paw.right.walking { animation-delay: 0.3s; }
    .head {
        position: absolute; top: 80px; left: 50px; width: 200px; height: 180px;
        background-color: var(--fur-black);
        border-radius: 55% 55% 45% 45% / 60% 60% 40% 40%;
        z-index: 5; box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        animation: headBob 1.2s infinite ease-in-out;
        transform-origin: center bottom;
    }
    .ear {
        position: absolute; top: 0; width: 100px; height: 160px;
        background-color: var(--fur-black); border-radius: 50% 50% 0 0; z-index: 1;
        animation: earFlop 0.6s infinite ease-in-out;
    }
    .ear.left { left: 10px; transform: rotate(-30deg) skewX(-10deg); border-radius: 80% 20% 0 0; }
    .ear.right { right: 10px; transform: rotate(30deg) skewX(10deg); border-radius: 20% 80% 0 0; }
    
    /* RESTO DEL CSS (Detalles faciales sin cambios) */
    .ear-inner { position: absolute; bottom: 15px; width: 70%; height: 75%; background-color: var(--ear-pink); opacity: 0.8; box-shadow: inset 0 0 10px rgba(0,0,0,0.1); }
    .ear.left .ear-inner { left: 15%; border-radius: 80% 20% 40% 40%; }
    .ear.right .ear-inner { right: 15%; border-radius: 20% 80% 40% 40%; }
    .eyebrow-spot { position: absolute; top: 35px; width: 30px; height: 18px; background-color: var(--fur-tan); border-radius: 50%; opacity: 0.9; }
    .eyebrow-spot.left { left: 40px; transform: rotate(-15deg); } .eyebrow-spot.right { right: 40px; transform: rotate(15deg); }
    .eyes-container { position: absolute; top: 70px; width: 100%; display: flex; justify-content: space-between; padding: 0 25px; box-sizing: border-box; }
    .eye { position: relative; width: 65px; height: 65px; background-color: #fff; border-radius: 50%; overflow: hidden; box-shadow: inset 0 2px 5px rgba(0,0,0,0.2); border: 2px solid var(--fur-black); }
    .iris { position: absolute; top: 5px; left: 5px; width: 55px; height: 55px; background: radial-gradient(circle at 50% 50%, #000 40%, var(--eye-brown) 100%); border-radius: 50%; animation: blink 4s infinite; }
    @keyframes blink { 0%, 96%, 100% { transform: scaleY(1); } 98% { transform: scaleY(0.1); } }
    .eye-shine-large { position: absolute; top: 10px; left: 12px; width: 20px; height: 20px; background-color: #fff; border-radius: 50%; z-index: 10; }
    .eye-shine-small { position: absolute; top: 35px; left: 8px; width: 10px; height: 10px; background-color: #fff; border-radius: 50%; z-index: 10; }
    .muzzle-area { position: absolute; bottom: 20px; left: 50%; transform: translateX(-50%); width: 90px; height: 70px; z-index: 6; }
    .muzzle-tan { position: absolute; bottom: 0; width: 100%; height: 100%; background-color: var(--fur-tan-light); border-radius: 50% 50% 60% 60% / 70% 70% 30% 30%; background: radial-gradient(circle at top center, var(--fur-tan-light), var(--fur-tan)); }
    .nose { position: absolute; top: 15px; left: 50%; transform: translateX(-50%); width: 26px; height: 16px; background-color: #111; border-radius: 40% 40% 60% 60%; }
    .nose::after { content:''; position: absolute; top: 3px; left: 5px; width: 8px; height: 4px; background: rgba(255,255,255,0.5); border-radius: 50%; }
    .mouth { position: absolute; bottom: 15px; left: 50%; transform: translateX(-50%); width: 30px; height: 15px; border-bottom: 3px solid #3d2a1f; border-radius: 0 0 50% 50%; }
    .cheek-spot { position: absolute; bottom: 30px; width: 25px; height: 25px; background: var(--fur-tan); border-radius: 50%; z-index: 5; }
    .cheek-spot.left { left: 35px; } .cheek-spot.right { right: 140px; }
    .body-upper { position: absolute; top: 240px; left: 75px; width: 150px; height: 100px; background-color: var(--fur-black); border-radius: 40%; z-index: 3; }
    .chest-tan { position: absolute; top: 0; left: 20%; width: 60%; height: 100%; background: linear-gradient(to bottom, var(--fur-tan), transparent); border-radius: 50%; }
    .collar-strap { position: absolute; top: 250px; left: 70px; width: 160px; height: 15px; background-color: var(--collar-brown); border-radius: 10px; transform: rotate(-2deg); z-index: 7; box-shadow: 0 2px 5px rgba(0,0,0,0.3); }
    .bow-tie { position: absolute; top: 245px; left: 130px; z-index: 8; transform: rotate(-5deg); }
    .bow-center { width: 15px; height: 15px; background: var(--collar-brown); border-radius: 5px; position: relative; z-index: 2; box-shadow: inset 0 -2px rgba(0,0,0,0.2); }
    .bow-loop { position: absolute; top: -5px; width: 30px; height: 25px; background: var(--collar-brown); border-radius: 10px; }
    .bow-loop.left { left: -25px; transform: skewX(10deg); } .bow-loop.right { right: -25px; transform: skewX(-10deg); }
    .paws-container { position: absolute; top: 320px; left: 80px; width: 140px; display: flex; justify-content: space-between; z-index: 15; }
    .paw { width: 50px; height: 35px; background-color: var(--fur-tan); border-radius: 50% 50% 30% 30%; position: relative; box-shadow: 0 3px 5px rgba(0,0,0,0.2); }
    .paw::before, .paw::after { content:''; position: absolute; bottom: 0; width: 18px; height: 20px; background: var(--fur-tan); border-radius: 50% 50% 20% 20%; border-top: 1px solid rgba(0,0,0,0.1); }
    .paw::before { left: 8px; } .paw::after { right: 8px; }
</style>